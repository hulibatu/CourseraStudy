<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg"
                android:descendantFocusability="blocksDescendants"
                android:minHeight="100dp">

    <ImageView
        android:id="@+id/iv_course_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/iv_like_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/iv_course_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/heart_1"/>

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="课时"
        android:textColor="@drawable/black"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        android:layout_toRightOf="@+id/iv_course_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:maxLines="1"
            android:text="课程名称"
            android:textColor="@drawable/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_course_university"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:maxLines="1"
            android:text="大学名称"
            android:textColor="@drawable/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_instructor_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:maxLines="1"
            android:text="讲师名称"
            android:textColor="@drawable/black"
            android:textSize="18dp"/>

    </LinearLayout>

</RelativeLayout>